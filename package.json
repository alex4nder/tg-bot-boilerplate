{
  "name": "tg-bot-starter",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "yarn eslint '.'",
    "db:migration:generate": "yarn workspace @repo/db migration:generate",
    "db:migration:create": "yarn workspace @repo/db migration:create",
    "db:migration:run": "yarn workspace @repo/db migration:run",
    "db:migration:revert": "yarn workspace @repo/db migration:revert",
    "db:migration:revert:all": "yarn workspace @repo/db migration:revert:all"
  },
  "devDependencies": {
    "eslint": "^9.19.0",
    "turbo": "^2.1.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.2.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
